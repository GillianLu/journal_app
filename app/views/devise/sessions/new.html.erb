<%= stylesheet_link_tag "application"%>
<%= stylesheet_link_tag "sidebar" %>
<%= stylesheet_link_tag "main_content" %>
<%= stylesheet_link_tag "form" %>
<%= stylesheet_link_tag "category" %>

<%= javascript_include_tag "sidebar" %>
<%= javascript_include_tag "filter" %>

<body class="login-bg">
  <div class="form-container">
  <div class="form-content">
    <h1>Log in</h1>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Input your email" %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Input your password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
      <%= link_to "No account yet? Sign up!", new_registration_path(resource_name) %><br />
      <%= f.submit "Log in" %>
    </div>


  <% end %>

  </div>
  
</div>
</body>
